<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/fila_lista_areas_codigo"
            android:layout_width="80sp"
            android:layout_height="29dp"
            android:layout_weight="0.67" android:textStyle="bold" android:textSize="20sp"/>

        <TextView
            android:id="@+id/fila_lista_areas_area"
            android:layout_width="125sp"
            android:layout_height="match_parent"
            android:layout_weight="0.53" android:textStyle="bold" android:textSize="20sp"/>

        <TextView
            android:id="@+id/fila_lista_areas_estado"
            android:layout_width="90sp"
            android:layout_height="match_parent"
            android:layout_weight="0.83" android:textStyle="bold" android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>