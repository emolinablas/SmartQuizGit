<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#5F2C91" android:gravity="left|center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_latorre" android:layout_margin="5sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartQuiz" android:layout_marginLeft="15sp" android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBAREAS"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginLeft="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/values_background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="CODIGO"
                android:textStyle="bold" android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:text="SUBAREA"
                android:textStyle="bold" android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="ESTADO"
                android:textStyle="bold" android:textSize="20sp"/>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:layout_marginTop="3sp"
            android:layout_weight="0.64" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_height="match_parent"
                android:orientation="vertical" android:layout_width="300sp">

                <ListView
                    android:id="@+id/sub_area_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>